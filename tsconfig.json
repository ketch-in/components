{
  "compilerOptions": {
    "target": "ES5",
    "module": "AMD",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "./src/index.js",
    "sourceRoot": "./src/",
    "rootDir": "./src/"
  },
  "include": ["src"]
}
